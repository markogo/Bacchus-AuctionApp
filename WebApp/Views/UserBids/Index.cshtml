@model IEnumerable<Domain.UserBid>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Completed auctions</h1>
<br/>
@if (!Model.Any())
{
    <h3 class="text-center">No auctions completed yet</h3>
}
<br/>
<div class="text-center">
    <a asp-controller="Home" asp-action="Index" class="btn btn-dark">Back to auctions</a>
</div>
<br/>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.productName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                Won by
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.productName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
        </tr>
}
    </tbody>
</table>
